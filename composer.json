{
    "name": "kreta/comment-bundle",
    "description": "Kreta comment bundle",
    "keywords": [
        "project",
        "manager",
        "development",
        "tool",
        "comment",
        "bundle"
    ],
    "homepage": "http://kreta.io",
    "license": "MIT",
    "type": "symfony-bundle",
    "authors": [
        {
            "name": "Beñat Espiña Diaz",
            "email": "benatespina@gmail.com",
            "homepage": "http://benatespina.com"
        },
        {
            "name": "Gorka Laucirica Ibarra",
            "email": "gorka.lauzirika@gmail.com",
            "homepage": "http://gorkalaucirica.net"
        }
    ],
    "require": {
        "php":                    ">=5.4",
        "kreta/core-bundle":      "^0.4.0",
        "kreta/comment":          "^0.4.0"
    },
    "require-dev": {
        "fabpot/php-cs-fixer":    "^1.10",
        "mmoreram/php-formatter": "^1.0",
        "phpspec/phpspec":        "^2.3"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/kreta/FOSUserBundle"
        },
        {
            "type": "vcs",
            "url": "https://github.com/kreta/Finite"
        },
        {
            "type": "vcs",
            "url": "https://github.com/kreta/FOSOAuthServerBundle"
        }
    ],
    "autoload": {
        "psr-4": {
            "Kreta\\Bundle\\CommentBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\Kreta\\Bundle\\CommentBundle\\": "spec/"
        }
    }
}
